<Alloy>
	<View class="page">
	    <Widget id="nav" src="navigation_group"/>
	    <View class="body">
	        
	        <View class="page-header">
	            <Label class="page-header-label">Type in medication name</Label>
	        </View>
	        
	        <View class="page-content">
		        <View class="searchbox">
		            <ImageView class="icon-medication"/>
		            <View class="txt-wrapper">
		                <TextField id="txtMedicationName" class="txt" hintText="Medication name" onChange="nameChanged" returnKeyType="Ti.UI.RETURNKEY_NEXT"/>
		            </View>
		        </View>
		        
		        <TableView id="tblRelatedName" onClick="relatedNameClicked"/>
	        </View>
	        
	    </View>
	</View>
</Alloy>